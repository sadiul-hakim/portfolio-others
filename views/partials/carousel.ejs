<div class="works" id="works">
<h1>My Works   <span style="font-size:1.2rem">   (click on pictures)</span></h1>

  <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="false" data-interval="5000" data-pause="hover">
  <div class="carousel-indicators">
  <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
<%records.forEach((item, index) => {%>

  <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="<%=index+1 %>" aria-current="true" aria-label="Slide <%=index + 2%>"></button>
<%})%>

        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="<%=records.length+1%> "  aria-label="Slide <%=records.length + 2%>"></button>
  </div>
  <div class="carousel-inner">


    <div class="carousel-item active">
      <a  data-bs-toggle="modal" data-bs-target="#staticBackdrop"><img src="photos/keeper.png" class="d-block w-100 h-100" alt="..."></a>
      <div class="carousel-caption d-none d-md-block">
        <h5 style="color: black;">Keeper & Todo-list</h5>
        <p>first demo work.</p>
      </div>
    </div>



<%records.forEach((item, index) => {%>

    <div class="carousel-item">
      <a  data-bs-toggle="modal" data-bs-target="#staticBackdrop<%=index%>"><img src="upload/<%=item.imageName[0]%>" class="d-block w-100 h-100 " alt="..."></a>
      <div class="carousel-caption d-none d-md-block">
        <h5 style="color: black;"><%=item.title%></h5>
        <p><%=item.content%></p>
      </div>
    </div>
<%})%>



